<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background11">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text=""
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="160dp"
            />
        <Button
            android:id="@+id/picture"
            android:background="@drawable/poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"/>
        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:text="Poster"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:layout_below="@id/picture"
            android:fontFamily="cursive"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:hint="name:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@id/appname"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:hint="password:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rememberPwd"
            android:textSize="16sp"
            android:layout_below="@id/password"
            android:text="Remember Password"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoLogin"
            android:textSize="16dp"
            android:layout_below="@id/password"
            android:layout_toRightOf="@id/rememberPwd"
            android:text="Automatic Login"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rememberPwd"
            android:textAllCaps="false"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:background="@drawable/bt_login"/>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="register"
            android:layout_marginTop="10dp"
            android:layout_below="@id/submit"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:background="@drawable/bt_login"
            />
    </RelativeLayout>


</LinearLayout>